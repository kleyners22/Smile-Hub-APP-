<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.0">

    <persistence-unit name="Smile-Hub" transaction-type="JTA">

        <!-- DataSource gestionado por Open Liberty -->
        <jta-data-source>jdbc/SmileHubDS</jta-data-source>

        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>

            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
            <property name="eclipselink.ddl-generation" value="none"/>

            <!-- Servidor -->
            <property name="eclipselink.target-server" value="Liberty"/>

            <!-- Logs (puedes bajarlos luego) -->
            <property name="eclipselink.logging.level" value="INFO"/>
            <property name="eclipselink.logging.level.sql" value="INFO"/>

            <!-- Cache -->
            <property name="eclipselink.cache.shared.default" value="false"/>

        </properties>
    </persistence-unit>
</persistence>
